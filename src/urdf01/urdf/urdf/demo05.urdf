<!-- 機器人 -->
<robot name="mycar">
    <link name="base_footprint">
        <visual>
            <geometry>
                <box size="0.001 0.001 0.001"/>
            </geometry>
        </visual>
    </link>
    <link name="base_link">
        <visual>
            <geometry>
                <cylinder radius="0.1" length="0.08"/>
                <!-- <box size="0.3 0.2 0.1"/>   -->
            </geometry>

            <origin xyz="0 0 0" rpy="0 0 0"/>

            <material name="car_color">
                <color rgba="1.0 1.0 0.0 0.5"/>
            </material>
        </visual>
    </link>

    <link name="wheel1">
        <visual>
            <geometry>
                <cylinder radius="0.035" length="0.015"/>
                <!-- <box size="0.3 0.2 0.1"/>   -->
            </geometry>

            <origin xyz="0 0 0" rpy="1.57 0 0"/>

            <material name="wheel_color">
                <color rgba="1.0 0.0 1.0 0.5"/>
            </material>
        </visual>
    </link>

    <link name="wheel2">
        <visual>
            <geometry>
                <cylinder radius="0.035" length="0.015"/>
                <!-- <box size="0.3 0.2 0.1"/>   -->
            </geometry>

            <origin xyz="0 0 0" rpy="1.57 0 0"/>

            <material name="wheel_color">
                <color rgba="1.0 0.0 1.0 0.5"/>
            </material>
        </visual>
    </link>


    <link name="camera">
        <visual>
            <geometry>
                <box size="0.02 0.05 0.05"/>  
            </geometry>

            <origin xyz="0 0 0" rpy="0 0 0"/>

            <material name="camera_clolr">
                <color rgba="1.0 0.0 0.0 0.5"/>
            </material>
        </visual>
    </link>

    <joint name="link2footprint" type="fixed">
        <parent link="base_footprint"/>
        <child link="base_link"/>
        <origin xyz="0 0 0.055"/>
    </joint>

    <joint name="wheel2base1" type="continuous">
        <parent link="base_link"/>
        <child link="wheel1"/>
        <origin xyz="0 0.1075 -0.0225"/>
        <axis xyz="0 0 1"/>
    </joint>

    <joint name="wheel2base2" type="continuous">
        <parent link="base_link"/>
        <child link="wheel2"/>
        <origin xyz="0 -0.1075 -0.0225"/>
        <axis xyz="0 0 1"/>
    </joint>

    <joint name="camera2base" type="continuous">
        <parent link="base_link"/>
        <child link="camera"/>
        <origin xyz="0.16 0 0.125" rpy="0.0 0.0 0.0"/>
        <axis xyz="0 0 1"/>
    </joint>
</robot>